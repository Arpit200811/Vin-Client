{
  "compilerOptions": {
    "target": "ES2020",
    "module": "Node16",
    "moduleResolution": "Node16",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": ["node"],
    "baseUrl": "./server",       // <- server folder ko base banao
    "paths": {
      "@shared/*": ["../shared/*"]  // <- server ke relative path se shared
    }
  },
  "include": ["server/**/*", "shared/**/*"]
}
